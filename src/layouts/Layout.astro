---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Harmonia Joanna Kaczmarek - Terapia dźwiękiem, coaching i warsztaty rozwojowe. Odnajdź wewnętrzny spokój i równowagę." } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pl_PL" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;1,300;1,400;1,500&family=Lato:wght@300;400;700&family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-cream text-dark">
    <header class="absolute top-0 left-0 right-0 z-50">
      <nav class="container mx-auto px-4 h-16 md:h-20 flex items-center">
        <div class="flex items-center justify-between w-full">
          <!-- Logo -->
          <a href="/" class="flex items-center h-full">
            <img src="/images/logo.png" alt="Harmonia - umysł · ciało · dusza" class="h-14 md:h-16 w-auto" />
          </a>
          
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-8">
            <a href="/" class="text-white/90 hover:text-white font-medium text-sm transition-colors">Strona główna</a>
            <a href="/o-mnie" class="text-white/90 hover:text-white font-medium text-sm transition-colors">O mnie</a>
            <a href="/oferta" class="text-white/90 hover:text-white font-medium text-sm transition-colors">Oferta</a>
            <a href="/swiece-sojowe" class="text-white/90 hover:text-white font-medium text-sm transition-colors">Świece sojowe</a>
            <a href="/kontakt" class="btn-primary">Kontakt</a>
          </div>
          
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 text-white hover:text-primary transition-colors" aria-label="Menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 bg-dark/95 backdrop-blur-sm rounded-lg">
          <div class="flex flex-col gap-4 p-4">
            <a href="/" class="text-white/90 hover:text-white font-medium">Strona główna</a>
            <a href="/o-mnie" class="text-white/90 hover:text-white font-medium">O mnie</a>
            <a href="/oferta" class="text-white/90 hover:text-white font-medium">Oferta</a>
            <a href="/swiece-sojowe" class="text-white/90 hover:text-white font-medium">Świece sojowe</a>
            <a href="/kontakt" class="btn-primary text-center">Kontakt</a>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="bg-dark text-white">
      <div class="container mx-auto px-4 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Logo & Description -->
          <div>
            <img src="/images/logo.png" alt="Harmonia" class="h-10 w-auto brightness-0 invert opacity-80" />
            <p class="mt-4 text-gray-300 text-sm leading-relaxed">
              Towarzyszę osobom przemęczonym i przytłoczonym stresem w podróży powrotnej do samych siebie.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h4 class="font-semibold text-lg mb-4">Strona</h4>
            <nav class="flex flex-col gap-2">
              <a href="/" class="text-gray-300 hover:text-primary-light transition-colors text-sm">Strona główna</a>
              <a href="/o-mnie" class="text-gray-300 hover:text-primary-light transition-colors text-sm">O mnie</a>
              <a href="/oferta" class="text-gray-300 hover:text-primary-light transition-colors text-sm">Oferta</a>
              <a href="/kontakt" class="text-gray-300 hover:text-primary-light transition-colors text-sm">Kontakt</a>
              <a href="/polityka-prywatnosci" class="text-gray-300 hover:text-primary-light transition-colors text-sm">Polityka prywatności</a>
            </nav>
          </div>
          
          <!-- Contact -->
          <div>
            <h4 class="font-semibold text-lg mb-4">Kontakt</h4>
            <div class="flex flex-col gap-2 text-sm text-gray-300">
              <a href="mailto:kontakt@harmonia-jk.pl" class="hover:text-primary-light transition-colors">
                kontakt@harmonia-jk.pl
              </a>
              <p>Dziwiszów, okolice Jeleniej Góry</p>
            </div>
            
            <!-- Social Links -->
            <div class="flex gap-4 mt-4">
              <a href="https://www.facebook.com/profile.php?id=100089317668259" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-primary-light transition-colors" aria-label="Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="https://www.instagram.com/harmoniajk/" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-primary-light transition-colors" aria-label="Instagram">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-sm text-gray-400">
          <p>&copy; {new Date().getFullYear()} Harmonia Joanna Kaczmarek. Wszelkie prawa zastrzeżone.</p>
        </div>
      </div>
    </footer>
    
    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
